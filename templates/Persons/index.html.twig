{% extends 'base.html.twig' %}

{% block title %}Tblpersons index{% endblock %}

{% block body %}
    <h1>Tblpersons index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Dob</th>
                <th>Gender</th>
                <th>Organization</th>
                <th>Designation</th>
                <th>Countryid</th>
                <th>State</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>PhotoName</th>
                <th>PhotoContent</th>
                <th>IsSelfEmp</th>
                <th>Doj</th>
                <th>Contacts</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tblperson in tblpersons %}
            <tr>
                <td>{{ tblperson.id }}</td>
                <td>{{ tblperson.firstname }}</td>
                <td>{{ tblperson.lastname }}</td>
                <td>{{ tblperson.dob ? tblperson.dob|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tblperson.gender }}</td>
                <td>{{ tblperson.organization }}</td>
                <td>{{ tblperson.designation }}</td>
                <td>{{ tblperson.countryid }}</td>
                <td>{{ tblperson.state }}</td>
                <td>{{ tblperson.city }}</td>
                <td>{{ tblperson.zipcode }}</td>
                <td>{{ tblperson.photoName }}</td>
                <td>{{ tblperson.photoContent }}</td>
                <td>{{ tblperson.isSelfEmp ? 'Yes' : 'No' }}</td>
                <td>{{ tblperson.doj ? tblperson.doj|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tblperson.contacts }}</td>
                <td>
                    <a href="{{ path('tblpersons_show', {'id': tblperson.id}) }}">show</a>
                    <a href="{{ path('tblpersons_edit', {'id': tblperson.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tblpersons_new') }}">Create new</a>
{% endblock %}
